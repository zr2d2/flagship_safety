<% semantic_form_for(@layer, :html => { :class => 'cmxform'} ) do |f| %>
  <% f.inputs do %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :icon %>
    <%= f.input :is_public, :label => "public?" %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>

<% if !layers.empty? %>
<table cellpadding="0" cellspacing="0" width="100%" class="elements">
 <thead>
         <tr class="cat_title">
                <th style="text-align:right;">Name</th>
                <th>Description</th>
                <th style="text-align:left;">Color</th>
                <th>Created</th>
                <th>Updated</th>
                <th></th>
         </tr>
 </thead>
 <tbody>
 <% layers.each do |layer| %>
 <tr class="<%= cycle('odd', 'even') %>">
  <td><%= link_to layer do %><h2><%= layer.name %></h2><% end %></td>
  <td class="center_img"><%= layer.color %></td>
  <td><p><%=raw layer.description %></p></td>
  <td><%= layer.created_at.strftime('%D') unless layer.created_at.nil? %></td>
  <td><%= layer.updated_at.strftime('%D') unless layer.updated_at.nil? %></td>
  <td>
    <span>
     <%= link_to 'Edit', edit_layer_path(layer), :class => 'edit-link' %>
     &nbsp;
     <%= link_to 'Remove', layer_path(layer), :confirm => 'Are you sure you want to remove this path?', :method => :delete, :class => 'cancel-link' %>
    </span>
  </td>
 </tr>
 <% end %>
 </tbody>
</table>
<% end %>
<div style="clear:both;"></div>

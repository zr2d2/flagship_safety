<% content_for :js_ready do %>
    <% point = @call_box %>
    var point = <%=raw point.to_json() %>;

    var map = setup_map(point, 1);
    var polygon = new google.maps.Polygon();
    var map_bounds = new google.maps.LatLngBounds();

    polygon.setMap(map);

    var coords = <%=raw @polygon.coords.to_json() %>;

    $.each(coords, function(index, coord){
      position = add_point_to_polygon(coord, polygon);
      map_bounds.extend(position);
    });
    map.fitBounds(map_bounds);
<% end %>

<% content_for :title, @call_box.name %>

<h2 class="breadcrumb">
        <%= link_to "Home", root_path %>&nbsp;/&nbsp;
        <%= link_to @layer.name, @layer %>&nbsp;/&nbsp;
</h2>

<div class="main-title">

        <%= @call_box.name %>

        <%= map_canvas({:style => " height: 500px;"})%>

        <span>
		<b>Cb num:</b>
		<%= @call_box.cb_num %>
                <br />
		<b>Cb type:</b>
		<%= @call_box.cb_type %>
                <br />
		<b>Latitude:</b>
		<%= @call_box.latitude %>
                <br />
		<b>Longitude:</b>
		<%= @call_box.longitude %>
                <br />
		<b>Notes:</b>
		<%= @call_box.notes %>
                <br />
		<%= link_to 'Edit', edit_layer_call_box_path(@layer, @call_box) %> |
		<%= link_to 'Back', layer_path(1) %>
        </span>
</div>

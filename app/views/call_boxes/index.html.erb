<% content_for :title, "Call Boxes" %>

<h1>Listing call_boxes</h1>

<table>
  <tr>
    <th>Cb num</th>
    <th>Cb type</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Aproximate?</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @call_boxes.each do |call_box| %>
  <tr>
    <td><%= call_box.cb_num %></td>
    <td><%= call_box.cb_type %></td>
    <td><%= call_box.latitude %></td>
    <td><%= call_box.longitude %></td>
    <td><%= call_box.aproximate %></td>
    <td><%= call_box.notes %></td>
    <td><%= link_to 'Show', layer_call_box_path(call_box.layer_id, call_box) unless call_box.layer_id.nil? %></td>
    <td><%= link_to 'Edit', edit_layer_call_box_path(call_box.layer_id, call_box) unless call_box.layer_id.nil? %></td>
    <td><%= link_to 'Destroy', layer_call_box_path(call_box.layer_id, call_box), :confirm => 'Are you sure?', :method => :delete unless call_box.layer_id.nil? %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Call box', new_layer_call_box_path %>

<%= semantic_form_for([@layer, @crime_alert], :html => { :class => 'cmxform'} ) do |f| %>
  <% f.inputs do %>
    <%= f.input :body %><br />
    <%= f.input :happened %><br />
    <%= f.input :location %><br />
    <%= f.input :raw_data %><br />
    <%= f.input :raw_id %><br />
    <%= f.input :legitimate %><br />
    <%= f.input :type_id %><br />
    <%= f.input :processed %><br />
    <%= f.input :latitude, :limit => 10 %><br />
    <%= f.input :longitude, :limit => 10 %><br />
    <%= f.input :layer_id %><br />
  <% end %>
  <% f.actions do %>
    <%= f.action :submit %>
  <% end %>
<% end %>

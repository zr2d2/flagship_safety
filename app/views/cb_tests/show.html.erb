<% content_for :js_ready do %>
    <% CallBox.include_root_in_json = false %>
    var call_box = <%=raw @call_box.to_json() %>;

    var map = setup_map(call_box, 17);
    add_point_to_map(call_box, map);
<% end %>

<% content_for :title do %>
  Call Box <%= @call_box.cb_num.to_s %> Tests
<% end %>

<h2 class="breadcrumb">
        <%= link_to "Home", root_path %>&nbsp;/&nbsp;
        <%= link_to @layer.name, @layer %>&nbsp;/&nbsp;
        <%= link_to @call_box.cb_num.to_s, layer_call_box_path(@layer, @call_box) %>
</h2>

<div class="main-title">

        Call Box <%= @call_box.cb_num.to_s %> Tests

        <%= map_canvas(:style => "width: 50%; height:200px; float:right;") %>

</div>

<div id="info_box">
	<b>Tested on:</b>
	<%= @cb_test.tested_on %>
	<br/>
	<b>Keypad:</b>
	<%= @cb_test.keypad %>
	<br/>
	<b>Key light:</b>
	<%= @cb_test.key_light %>
	<br/>
	<b>Call function:</b>
	<%= @cb_test.call_fn %>
	<br/>
	<b>DTMF:</b>
	<%= @cb_test.DTMF %>
	<br/>
	<b>Blue light:</b>
	<%= @cb_test.blue_light %>
	<br/>
	<b>Response test:</b>
	<%= @cb_test.response_test %>
	<br/>
</div>
<div style="clear: both; padding:5px;"></div>
<%= link_to 'Edit', edit_cb_test_path, :class => 'link-button' %>
<%= link_to 'Remove', cb_test_path, :confirm => 'Are you sure you want to remove this call box?', :method => :delete, :class => 'link-button' %>
